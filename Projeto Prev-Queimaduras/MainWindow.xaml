<Window x:Class="Projeto_Prev_Queimaduras.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz Prevenção de Queimaduras" Height="500" Width="800"
        Background="#FFF5F5DC">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Quiz de Prevenção de Queimaduras" 
                   FontSize="28" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,20"/>

        <!-- Pergunta com imagem -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <Image x:Name="imgPergunta" Width="200" Height="200" Stretch="Uniform"/>
            <TextBlock x:Name="txtPergunta" 
                       FontSize="22" 
                       TextWrapping="Wrap" 
                       TextAlignment="Center"
                       Margin="0,15,0,0"/>
        </StackPanel>

        <!-- Alternativas -->
        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <Button x:Name="btnA" Content="Opção A" FontSize="18" Margin="5" Click="btnResposta_Click"/>
            <Button x:Name="btnB" Content="Opção B" FontSize="18" Margin="5" Click="btnResposta_Click"/>
            <Button x:Name="btnC" Content="Opção C" FontSize="18" Margin="5" Click="btnResposta_Click"/>
        </StackPanel>

        <!-- Feedback e Pontuação -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,15,0,0">
            <TextBlock x:Name="txtFeedback" FontSize="20" FontWeight="Bold" Margin="10"/>
            <TextBlock x:Name="txtPontuacao" FontSize="20" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
